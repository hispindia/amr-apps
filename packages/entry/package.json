{
    "name": "amr-entry",
    "version": "0.2.3",
    "description": "AMR data entry app for DHIS2",
    "main": "index.js",
    "license": "BSD-3-Clause",
    "homepage": ".",
    "developer": {
        "name": "Terje Uglebakken",
        "company": "HISP India"
    },
    "manifest.webapp": {
        "name": "AMR Data Entry",
        "description": "Enter AMR data.",
        "appType": "APP",
        "activities": {
            "dhis": {
                "href": "*"
            }
        }
    },
    "icons": {
        "48": "icon.png"
    },
    "scripts": {
        "start": "PORT=3001 react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom",
        "eject": "react-scripts eject",
        "prebuild": "rimraf build ../../amr-entry.zip && d2-manifest package.json public/manifest.webapp",
        "postbuild": "cd build && bestzip ../../../amr-entry.zip *",
        "analyze": "source-map-explorer build/static/js/*.js'"
    },
    "dependencies": {
        "@amr/app": "*",
        "react": "^16.9.0",
        "react-dom": "^16.9.0"
    },
    "devDependencies": {
        "bestzip": "^2.1.4",
        "d2-manifest": "^1.0.0",
        "react-scripts": "^3.1.0",
        "rimraf": "^2.6.3",
        "source-map-explorer": "^2.0.1"
    }
}