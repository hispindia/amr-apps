{
  "name": "amr",
  "version": "0.1.0",
  "description": "AMR record capture app for DHIS2",
  "main": "index.js",
  "license": "BSD-3-Clause",
  "homepage": ".",
  "manifest.webapp": {
    "name": "AMR Record Capture",
    "appType": "APP",
    "icons": {
      "48": "icon.png"
    },
    "activities": {
      "dhis": {
        "href": "../../.."
      }
    },
    "dhis2": {
      "apiVersion": "30"
    },
    "developer": {
      "name": "Terje Uglebakken",
      "company": "HISP India"
    },
    "default_locale": "en"
  },
  "dependencies": {
    "@babel/runtime": "^7.3.1",
    "@date-io/moment": "^1.0.1",
    "@dhis2/ui": "^1.0.0-beta.10",
    "@material-ui/core": "^3.9.0",
    "@material-ui/icons": "^3.0.2",
    "lodash": "^4.17.11",
    "material-ui-pickers": "^2.1.1",
    "moment": "^2.23.0",
    "mui-datatables": "^2.0.0-beta-52",
    "raw-loader": "^1.0.0",
    "react": "^16",
    "react-dom": "^16",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.3",
    "styled-components": "^4.1.3",
    "typeface-roboto": "0.0.54"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "webpack -p --config webpack.prod.js",
    "zip": "cd build && zip -r -X ../amr-record-capture.zip .",
    "postbuild": "npm run manifest && npm run zip",
    "manifest": "d2-manifest package.json build/manifest.webapp",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "code-style"
