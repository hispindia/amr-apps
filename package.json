    "@dhis2/code-style": "^1.7.1",
    "babel-plugin-transform-imports": "^1.5.1",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
