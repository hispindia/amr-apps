{
    "name": "amr-apps",
    "version": "0.1.2",
    "description": "AMR apps for DHIS2",
    "main": "index.js",
    "author": "Terje Uglebakken <terjeug@ifi.uio.no>",
    "license": "BSD-3-Clause",
    "private": true,
    "scripts": {
        "bump": "node scripts/bump.js",
        "build": "NODE_ENV=production yarn clean && yarn build:shared && yarn build:approval && yarn build:capture",
        "build:approval": "node scripts/approval.js",
        "build:capture": "node scripts/capture.js",
        "build:shared": "BABEL_ENV=cjs babel src --out-dir build --copy-files --verbose",
        "clean": "rm -rf ./build/*",
        "clean:node": "rm -rf ./node_modules/*",
        "format": "packages code-style",
        "manifest:approval": "d2-manifest approval/manifest.json approval/public/manifest.webapp",
        "manifest:capture": "d2-manifest capture/manifest.json capture/public/manifest.webapp",
        "postbuild:approval": "yarn zip:approval",
        "postbuild:capture": "yarn zip:capture",
        "prebuild:approval": "yarn manifest:approval",
        "prebuild:capture": "yarn manifest:capture",
        "release": "packages release",
        "start": "node scripts/watch.js",
        "zip:approval": "cd build/approval && zip -r -X ../../amr-approval.zip .",
        "zip:capture": "cd build/capture && zip -r -X ../../amr-capture.zip ."
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.4.0",
        "@babel/plugin-proposal-class-properties": "^7.4.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
        "@babel/plugin-transform-react-constant-elements": "^7.2.0",
        "@babel/preset-env": "^7.4.2",
        "@babel/preset-react": "^7.0.0",
        "@dhis2/packages": "^1.3.0",
        "babel-plugin-transform-imports": "^1.5.1",
        "chokidar": "^2.0.4",
        "fs-extra": "^7.0.0",
        "husky": "^1.0.1",
        "react-dev-utils": "^8.0.0"
    },
    "dependencies": {
        "@babel/runtime": "^7.3.1",
        "@date-io/moment": "^1.0.1",
        "@dhis2/ui": "^1.0.0-beta.12",
        "@material-ui/core": "^3.9.3",
        "@material-ui/icons": "^3.0.2",
        "d2-manifest": "^1.0.0",
        "material-ui-pickers": "^2.2.4",
        "moment": "^2.24.0",
        "mui-datatables": "^2.0.0-beta.59",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-router-dom": "^5.0.0",
        "react-scripts": "^2.1.8",
        "styled-components": "^4.2.0",
        "typeface-roboto": "0.0.54"
    }
}