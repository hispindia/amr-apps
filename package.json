{
    "name": "amr-apps",
    "version": "0.1.12",
    "description": "AMR apps for DHIS2",
    "main": "index.js",
    "author": "Terje Uglebakken <terjeug@ifi.uio.no>",
    "license": "BSD-3-Clause",
    "private": true,
    "scripts": {
        "analyze:approval": "source-map-explorer 'build/approval/static/js/*.js'",
        "analyze:entry": "source-map-explorer 'build/entry/static/js/*.js'",
        "bump": "node scripts/bump.js",
        "build": "NODE_ENV=production yarn clean && yarn build:shared && yarn build:approval && yarn build:entry",
        "build:approval": "node scripts/approval.js",
        "build:entry": "node scripts/entry.js",
        "build:shared": "BABEL_ENV=cjs babel src --out-dir build --copy-files --verbose",
        "clean": "rm -rf ./build/*",
        "clean:node": "rm -rf ./node_modules/*",
        "format": "d2-style js apply",
        "launch": "./scripts/konsole/launch.sh",
        "manifest:approval": "d2-manifest approval/manifest.json approval/public/manifest.webapp",
        "manifest:entry": "d2-manifest entry/manifest.json entry/public/manifest.webapp",
        "postbuild:approval": "yarn zip:approval",
        "postbuild:entry": "yarn zip:entry",
        "prebuild:approval": "yarn manifest:approval",
        "prebuild:entry": "yarn manifest:entry",
        "start": "node scripts/watch.js",
        "zip:approval": "rm -f amr-approval.zip && cd build/approval && zip -r -X ../../amr-approval.zip .",
        "zip:entry": "rm -f amr-entry.zip && cd build/entry && zip -r -X ../../amr-entry.zip ."
    },
    "peerDependencies": {
        "typeface-roboto": "^0.0.54"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.4.0",
        "@babel/plugin-proposal-class-properties": "^7.4.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
        "@babel/plugin-transform-react-constant-elements": "^7.2.0",
        "@babel/preset-env": "^7.4.2",
        "@babel/preset-react": "^7.0.0",
        "@dhis2/cli-style": "^3.2.2",
        "chokidar": "^2.0.4",
        "d2-manifest": "^1.0.0",
        "fs-extra": "^7.0.0",
        "husky": "^1.3.1",
        "react-dev-utils": "^8.0.0",
        "source-map-explorer": "^1.8.0"
    },
    "dependencies": {
        "@babel/runtime": "^7.3.1",
        "@date-io/dayjs": "^1.3.5",
        "@date-io/moment": "^1.0.1",
        "@dhis2/app-runtime": "^1.1.0",
        "@dhis2/ui": "^1.0.0-beta.12",
        "@dhis2/ui-core": "^2.1.0",
        "@dhis2/ui-widgets": "^1.0.2",
        "@material-ui/core": "^3.9.3",
        "@material-ui/icons": "^3.0.2",
        "dayjs": "^1.8.14",
        "material-ui-pickers": "^2.2.4",
        "mui-datatables": "^2.0.0-beta.59",
        "prop-types": "^15.7.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-router-dom": "^5.0.0",
        "react-scripts": "^2.1.8",
        "styled-components": "^4.2.0"
    },
    "husky": {
        "hooks": {
            "commit-msg": "d2-style commit check",
            "pre-commit": "d2-style js apply"
        }
    }
}
