{
    "name": "amr-entry",
    "version": "0.4.1",
    "description": "AMR data entry app for DHIS2",
    "main": "index.js",
    "license": "BSD-3-Clause",
    "homepage": ".",
    "developer": {
        "name": "Terje Uglebakken",
        "company": "HISP India"
    },
    "manifest.webapp": {
        "name": "AMR Data Entry",
        "description": "Enter AMR data.",
        "appType": "APP",
        "activities": {
            "dhis": {
                "href": "*"
            }
        }
    },
    "icons": {
        "16": "appicon-16x16.svg",
        "32": "appicon-32x32.svg",
        "48": "appicon-48x48.svg"
    },
    "scripts": {
        "start": "PORT=3001 react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "prebuild": "rimraf build ../../amr-entry.zip && d2-manifest package.json public/manifest.webapp",
        "postbuild": "cd build && bestzip ../../../amr-entry.zip *",
        "analyze": "source-map-explorer build/static/js/*.js'"
    },
    "dependencies": {
        "@hisp-amr/api": "*",
        "@hisp-amr/app": "*",
        "@hisp-amr/icons": "*",
        "@hisp-amr/inputs": "*",
        "@hisp-amr/org-unit-tree": "*",
        "@dhis2/ui-core": "^3.12.0",
        "react": "^16.9.0",
        "react-dom": "^16.9.0"
    }
}